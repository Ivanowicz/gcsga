{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["dom", "ES2021", "dom.Iterable"],
		"types": ["jquery", "jest", "node"],
		"typeRoots": ["node_modules/@types", "types"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@actor": ["src/module/actor"],
			"@actor/*": ["src/module/actor/*"],
			"@item": ["src/module/item"],
			"@item/*": ["src/module/item/*"],
			"@feature": ["src/module/feature"],
			"@feature/*": ["src/module/feature/*"],
			"@prereq": ["src/module/prereq"],
			"@prereq/*": ["src/module/prereq/*"],
			"@ui": ["src/module/ui"],
			"@ui/*": ["src/module/ui/*"],
			"@module/*": ["src/module/*"],
			"@scripts/*": ["src/scripts/*"],
			"@util": ["src/util"],
			"@util/*": ["src/util/*"],
			"@lang/*": ["src/lang/*"],
		},
	},
	"include": ["src"],
}
