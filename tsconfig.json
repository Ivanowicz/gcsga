{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"noEmit": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"isolatedModules": true,
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "dist",
		"allowUnusedLabels": false,
		"removeComments": false,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"noErrorTruncation": true,
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@actor": ["src/module/actor"],
			"@actor/*": ["src/module/actor/*"],
			"@item": ["src/module/item"],
			"@item/*": ["src/module/item/*"],
			"@feature": ["src/module/system/feature"],
			"@feature/*": ["src/module/system/feature/*"],
			"@prereq": ["src/module/system/prereq"],
			"@prereq/*": ["src/module/system/prereq/*"],
			"@system": ["src/module/system"],
			"@sytem/*": ["src/module/system/*"],
			"@ui": ["src/module/ui"],
			"@ui/*": ["src/module/ui/*"],
			"@module/*": ["src/module/*"],
			"@scripts/*": ["src/scripts/*"],
			"@util": ["src/util"],
			"@util/*": ["src/util/*"],
			"@lang/*": ["static/lang/*"]
		},
		"types": ["jest", "jquery", "node"],
		"typeRoots": ["node_modules/@types", "types/foundry"]
	},
	"watchOptions": {
		"excludeDirectories": []
	}
}
