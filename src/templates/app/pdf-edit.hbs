<form class="{{cssClass}} flexcol" autocomplete="off">
	{{> journalEntryPageHeader}}

	{{#if document.src}}
	<iframe src="scripts/pdfjs/web/viewer.html?{{params}}#page={{sum document.system.offset 5}}"></iframe>
	{{/if}}

	<div class="form-group picker">
		<label>{{localize "JOURNALENTRYPAGE.PDFSource"}}</label>
		<div class="form-fields">
			{{filePicker target="src" type="text"}}
			<input class="image" type="text" name="src" placeholder="path/document.pdf" value="{{document.src}}">
		</div>
	</div>
	<div class="form-group">
		<label>{{localize "gurps.pdf.offset"}}</label>
		<div class="form-fields">
			<input
				type="number"
				name="system.offset"
				placeholder="{{localize 'gurps.pdf.offset_placeholder'}}"
				value="{{document.system.offset}}"
			>
		</div>
	</div>
	<div class="form-group">{{localize "gurps.pdf.offset_hint"}}</div>
	<div class="form-group">
		<label>{{localize "gurps.pdf.code"}}</label>
		<div class="form-fields">
			<input
				type="text"
				name="system.code"
				placeholder="{{localize 'gurps.pdf.code_placeholder'}}"
				value="{{document.system.code}}"
			>
		</div>
	</div>

	{{> journalEntryPageFooter}}
</form>
