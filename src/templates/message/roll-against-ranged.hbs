<div class="dice-roll skill">
	<div data-json="{{json item}}" data-type="{{type}}" class="name rollable">{{displayName}}</div>
	{{#if item.default}}
		<div class="default">
			{{localize "gurps.roll.default" default=item.default}}
		</div>
	{{/if}}
	{{#if modifiers.length}}
		<div class="modifiers">
			{{#each modifiers}}
				<div class="mod mod-{{this.class}}" data-mod="{{json this}}">{{signed this.modifier}}{{#if this.name}}:
						{{this.name}}{{/if}}</div>
			{{/each}}
			{{{eff}}}
		</div>
	{{/if}}
	<hr />
	<div class="dice-result">
		<div class="dice-total {{success}}">{{total}}</div>
		{{{margin}}}
		{{#if extra}}
			<div class="gcs-ranged-weapon">
				<strong>{{extra.potential_hits}}</strong>
				{{localize "gurps.roll.ranged.extra" rate_of_fire=extra.rate_of_fire recoil=extra.recoil}}.
			</div>
		{{/if}}
		{{{tooltip}}}
	</div>
</div>
