<div id="spells" class="item-list">
	<div class="header desc">{{ localize "gurps.character.spells.desc" }}</div>
	{{#each spells }}
		<div
			class="desc item"
			data-uuid="{{ this.uuid }}"
			{{{indent this.parents.length}}}
		>
			<div class="dropdown"></div>
			<div class="name">
				{{this.name}}
			</div>
			{{>actor/character/sections/item-notes}}
		</div>
	{{else}}
	<div class="desc item filler"></div>
	{{/each}}
</div>
