{{#unless @root/inCompendium}}
<div class="enabled" data-uuid="{{this.uuid}}">{{#if this.enabled}}<i class="gcs-checkmark"></i>{{/if}}</div>
{{/unless}}
<div class="desc item" data-uuid="{{this.uuid}}" data-type="Item" {{{indent
	this.parents.length}}}>
	<div class="dropdown">
		{{#if (eq this.type "eqp_modifier_container")}}
		{{#if this.open}}
		{{>actor/character/sections/dropdown-open}}
		{{else}}
		{{>actor/character/sections/dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.formattedName}}
	</div>
	{{>actor/character/sections/item-notes}}
</div>
<div class="tl">{{this.techLevel}}</div>
<div class="value">{{this.value}}</div>
<div class="weight">{{this.weight}}</div>
<div class="tags">{{join this.tags ", "}}</div>
<div class="reference">{{{ref this.reference}}}</div>
{{#if this.open}}
{{#each (sort this.children "sort")}}
{{>item/sections/eqp-mod}}
{{/each}}
{{/if}}
