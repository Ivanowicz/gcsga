<form class="{{cssClass}}" autocomplete="off">
	<div id="sheet">
		<div id="details">
			<div class="label">{{localize "gurps.item.img"}}</div>
			<div class="field">
				<div class="img-display" style="background-image: url({{document.img}});">
					<img src="{{document.img}}" data-edit="img" title="{{document.name}}" />
				</div>
			</div>
			<div class="label">{{localize "gurps.weapon.usage"}}</div>
			<div class="field">
				<input type="text" name="system.usage" value="{{system.usage}}" data-dtype="String" />
			</div>
			<div class="label">{{localize "gurps.weapon.notes"}}</div>
			<div class="field">
				<input
					type="text"
					name="system.usage_notes"
					value="{{system.usage_notes}}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{localize "gurps.weapon.accuracy"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.accuracy.base"
					value="{{document.accuracy.base}}"
					data-dtype="Number"
					{{disabled document.accuracy.jet}}
				/>
			<div class="label">{{localize "gurps.weapon.accuracy_scope"}}</div>
				<input
					type="text"
					name="weapon.accuracy.scope"
					value="{{document.accuracy.scope}}"
					data-dtype="Number"
					{{disabled document.accuracy.jet}}
				/>
				<label class="label checkbox-label" style="justify-self: end;">
					<input
						type="checkbox"
						name="weapon.accuracy.jet"
						data-dtype="Boolean"
						{{checked document.accuracy.jet}}
					/>
				{{ localize "gurps.weapon.accuracy_jet" }}
				</label>
			</div>
			<div class="label">{{localize "gurps.weapon.damage"}}</div>
			<div class="field no-stretch">
				<select name="system.damage.st" data-dtype="String">
					{{#select system.damage.st}}
						{{#each config.select.damage_st as |v k|}}
							<option value="{{k}}">{{localize v}}</option>
						{{/each}}
					{{/select}}
				</select>
				<input
					type="text"
					name="system.damage.modifier_per_die"
					value="{{signed system.damage.modifier_per_die}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.modifier_per_die"}}</div>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<div class="label">{{localize "gurps.weapon.armor_divisor"}}</div>
				<input
					type="text"
					name="system.damage.armor_divisor"
					value="{{system.damage.armor_divisor}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.damage_type"}}</div>
				<input
					type="text"
					name="system.damage.type"
					value="{{system.damage.type}}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{localize "gurps.weapon.fragmentation"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="system.damage.fragmentation"
					value="{{diceString system.damage.fragmentation}}"
					data-dtype="String"
				/>
				<div class="label">{{localize "gurps.weapon.armor_divisor"}}</div>
				<input
					type="text"
					name="system.damage.fragmentation_armor_divisor"
					value="{{system.damage.fragmentation_armor_divisor}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.damage_type"}}</div>
				<input
					type="text"
					name="system.damage.fragmentation_type"
					value="{{system.damage.fragmentation_type}}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{localize "gurps.weapon.range"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.range.max"
					value="{{document.range.max}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.range_half_damage"}}</div>
				<input
					type="text"
					name="weapon.range.halfDamage"
					value="{{document.range.halfDamage}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.range_min"}}</div>
				<input
					type="text"
					name="weapon.range.min"
					value="{{document.range.min}}"
					data-dtype="Number"
				/>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.range.musclePowered"
						data-dtype="Boolean"
						{{checked document.range.musclePowered}}
					/>
					{{localize "gurps.weapon.muscle_powered"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.range.inMiles"
						data-dtype="Boolean"
						{{checked document.range.inMiles}}
					/>
					{{localize "gurps.weapon.in_miles"}}
				</label>
			</div>
			<div class="label">{{localize "gurps.weapon.rate_of_fire"}}</div>
			<div class="field no-stretch">
				<div class="label">{{localize "gurps.weapon.mode_1"}}</div>
				<input
					type="text"
					name="weapon.rate_of_fire.mode1.shotsPerAttack"
					value="{{document.range.mode1.shotsPerAttack}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.shots_per_attack"}}</div>
				<input
					type="text"
					name="weapon.rate_of_fire.mode1.secondaryProjectiles"
					value="{{document.range.mode1.secondaryProjectiles}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.secondary_projectiles"}}</div>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.rate_of_fire.mode1.fullAutoOnly"
						data-dtype="Boolean"
						{{checked document.rate_of_fire.mode1.fullAutoOnly}}
					/>
					{{localize "gurps.weapon.full_auto_only"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.rate_of_fire.mode1.highCyclicControlledBursts"
						data-dtype="Boolean"
						{{checked document.rate_of_fire.mode1.highCyclicControlledBursts}}
					/>
					{{localize "gurps.weapon.high_cyclic_controlled_bursts"}}
				</label>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<div class="label">{{localize "gurps.weapon.mode_2"}}</div>
				<input
					type="text"
					name="weapon.rate_of_fire.mode2.shotsPerAttack"
					value="{{document.range.mode2.shotsPerAttack}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.shots_per_attack"}}</div>
				<input
					type="text"
					name="weapon.rate_of_fire.mode2.secondaryProjectiles"
					value="{{document.range.mode2.secondaryProjectiles}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.secondary_projectiles"}}</div>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.rate_of_fire.mode2.fullAutoOnly"
						data-dtype="Boolean"
						{{checked document.rate_of_fire.mode2.fullAutoOnly}}
					/>
					{{localize "gurps.weapon.full_auto_only"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.rate_of_fire.mode2.highCyclicControlledBursts"
						data-dtype="Boolean"
						{{checked document.rate_of_fire.mode2.highCyclicControlledBursts}}
					/>
					{{localize "gurps.weapon.high_cyclic_controlled_bursts"}}
				</label>
			</div>
			<div class="label">{{localize "gurps.weapon.shots"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.shots.count"
					value="{{document.shots.count}}"
					data-dtype="Number"
					{{disabled document.shots.thrown}}
				/>
				<div class="label">{{localize "gurps.weapon.in_chamber"}}</div>
				<input
					type="text"
					name="weapon.shots.inChamber"
					value="{{document.shots.inChamber}}"
					data-dtype="Number"
					{{disabled document.shots.thrown}}
				/>
				<div class="label">{{localize "gurps.weapon.duration"}}</div>
				<input
					type="text"
					name="weapon.shots.duration"
					value="{{document.shots.duration}}"
					data-dtype="Number"
					{{disabled document.shots.thrown}}
				/>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<div class="label">{{localize "gurps.weapon.reload_time"}}</div>
				<input
					type="text"
					name="weapon.shots.reloadTime"
					value="{{document.shots.reloadTime}}"
					data-dtype="Number"
				/>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.shots.reloadTimeIsPerShot"
						data-dtype="Boolean"
						{{checked document.shots.reloadTimeIsPerShot}}
					/>
					{{localize "gurps.weapon.reload_time_is_per_shot"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.shots.thrown"
						data-dtype="Boolean"
						{{checked document.shots.thrown}}
					/>
					{{localize "gurps.weapon.thrown"}}
				</label>
			</div>
			<div class="label">{{localize "gurps.weapon.bulk"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.bulk.normal"
					value="{{document.bulk.normal}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.bulk_giant"}}</div>
				<input
					type="text"
					name="weapon.bulk.giant"
					value="{{document.bulk.giant}}"
					data-dtype="Number"
				/>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.bulk.retractingStock"
						data-dtype="Boolean"
						{{checked document.bulk.retractingStock}}
					/>
					{{localize "gurps.weapon.retracting_stock"}}
				</label>
			</div>
			<div class="label">{{localize "gurps.weapon.recoil"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.recoil.shot"
					value="{{document.recoil.shot}}"
					data-dtype="Number"
				/>
				<div class="label">{{localize "gurps.weapon.slug"}}</div>
				<input
					type="text"
					name="weapon.recoil.slug"
					value="{{document.recoil.slug}}"
					data-dtype="Number"
				/>
			</div>
			<div class="label">{{localize "gurps.weapon.strength"}}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="weapon.strength.min"
					value="{{document.strength.min}}"
					data-dtype="Number"
				/>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.strength.twoHanded"
						data-dtype="Boolean"
						{{checked document.strength.twoHanded}}
					/>
					{{localize "gurps.weapon.two_handed"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.strength.twoHandedUnready"
						data-dtype="Boolean"
						{{checked document.strength.twoHandedUnready}}
					/>
					{{localize "gurps.weapon.two_handed_unready"}}
				</label>
			</div>
			<div class="label"></div>
			<div class="field no-stretch">
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.strength.bipod"
						data-dtype="Boolean"
						{{checked document.strength.bipod}}
					/>
					{{localize "gurps.weapon.bipod"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.strength.mounted"
						data-dtype="Boolean"
						{{checked document.strength.mounted}}
					/>
					{{localize "gurps.weapon.mounted"}}
				</label>
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="weapon.strength.musketRest"
						data-dtype="Boolean"
						{{checked document.strength.musketRest}}
					/>
					{{localize "gurps.weapon.musket_rest"}}
				</label>
			</div>
		</div>
		{{>item/sections/defaults attributes=attributes sysPrefix=sysPrefix}}
	</div>
</form>
