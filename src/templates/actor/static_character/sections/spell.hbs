{{#unless this.isCollapsed}}
<div class="desc item" data-uuid="{{this.uuid}}" style="padding-left: calc({{this.indent}} * 12px + 6px)">
	<div class="dropdown">
		{{#if this.hasContains }}
		<i class="dropdown-toggle open gcs-circled-chevron-down" data-key="system.spells.{{@key}}"></i>
		{{/if}}
		{{#if this.hasCollapsed }}
		<i class="dropdown-toggle closed gcs-circled-chevron-right" data-key="system.spells.{{@key}}"></i>
		{{/if}}
	</div>
	<div class="name">{{this.name}}</div>
	<div class="item-notes">
		{{this.notes}}
		{{staticSpellValues this}}
	</div>
</div>
<div class="college">{{join this.college ", "}}</div>
<div data-uuid="{{this.uuid}}" data-type="spell" class="level rollable">{{this.import}}</div>
<div data-uuid="{{this.uuid}}" data-type="spell_rsl" class="rsl rollable">{{this.relativelevel}}</div>
<div class="points">{{this.points}}</div>
<div class="reference">{{{ref this.pageref}}}</div>
{{/unless}}
