{{#unless this.isCollapsed}}
<div class="desc item" data-uuid="{{ this.uuid }}" style="padding-left: calc({{ this.indent }} * 12px + 6px)">
	<div class="dropdown">
		{{#if this.hasContains }}
		<i class="dropdown-toggle open gcs-circled-chevron-down" data-key="system.notes.{{@key}}"></i>
		{{/if}}
		{{#if this.hasCollapsed }}
		<i class="dropdown-toggle closed gcs-circled-chevron-right" data-key="system.notes.{{@key}}"></i>
		{{/if}}
	</div>
	<div class="name md">{{{md this.notes}}}</div>
</div>
<div class="reference">{{{ref this.pageref}}}</div>
{{/unless}}
