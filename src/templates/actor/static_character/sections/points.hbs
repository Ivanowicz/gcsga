<div id="points">
	<div class="header">{{system.totalpoints.total}} {{localize "gurps.character.points.title"}}</div>
	<div class="fieldblock">
		{{>sections/input-text after="gurps.character.points.unspent" field="field" name="system.totalpoints.unspent"
		data=system.totalpoints.unspent type="Number" class=(input_lock editing)}}
		{{>sections/input-text after="gurps.character.points.race" field="field" data=system.totalpoints.race
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.attributes" field="field"
		data=system.totalpoints.attributes
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.advantages" field="field" data=system.totalpoints.ads
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.disadvantages" field="field" data=system.totalpoints.disads
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.quirks" field="field" data=system.totalpoints.quirks
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.skills" field="field" data=system.totalpoints.skills
		class="disabled"}}
		{{>sections/input-text after="gurps.character.points.spells" field="field" data=system.totalpoints.spells
		class="disabled"}}
	</div>
</div>
