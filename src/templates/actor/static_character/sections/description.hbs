<div id="description">
	<div class="header">{{localize "gurps.character.description"}}</div>
	<div class="fieldblock">
		<div class="label">{{localize "gurps.character.gender"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.gender"
				data-dtype="String"
				value="{{system.traits.gender}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.age"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.age"
				data-dtype="String"
				value="{{system.traits.age}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.birthday"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.birthday"
				data-dtype="String"
				value="{{system.traits.birthday}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.religion"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.religion"
				data-dtype="String"
				value="{{system.traits.religion}}"
				{{input_lock editing}}
			/>
		</div>
	</div>
	<div class="fieldblock">
		<div class="label">{{localize "gurps.character.height"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.height"
				data-dtype="String"
				value="{{system.traits.height}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.weight"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.weight"
				data-dtype="String"
				value="{{system.traits.weight}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.sm"}}</div>
		<div
			class="field rollable"
			data-type="modifier"
			data-comment="{{localize 'gurps.modifier.size.size' size=(signed system.traits.sizemod)}}"
			data-modifier="{{system.traits.sizemod}}"
		>
			<input
				type="text"
				name="system.traits.sizemod"
				data-dtype="Number"
				value="{{signed system.traits.sizemod}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.tech_level"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.techlevel"
				data-dtype="String"
				value="{{system.traits.techlevel}}"
				{{input_lock editing}}
			/>
		</div>
	</div>
	<div class="fieldblock">
		<div class="label">{{localize "gurps.character.hair"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.hair"
				data-dtype="String"
				value="{{system.traits.hair}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.eyes"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.eyes"
				data-dtype="String"
				value="{{system.traits.eyes}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.skin"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.skin"
				data-dtype="String"
				value="{{system.traits.skin}}"
				{{input_lock editing}}
			/>
		</div>
		<div class="label">{{localize "gurps.character.handedness"}}</div>
		<div class="field">
			<input
				type="text"
				name="system.traits.hand"
				data-dtype="String"
				value="{{system.traits.hand}}"
				{{input_lock editing}}
			/>
		</div>
	</div>
</div>
