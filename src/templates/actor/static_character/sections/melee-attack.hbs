<div class="desc">
	<div data-uuid="{{this.itemid}}" class="name">{{ this.name }} {{#if this.itemid}}<i class="fas fa-star tooltip gga-item"></i>{{/if}}</div>
	<div class="item-notes">{{{this.notes}}}</div>
</div>
<div data-uuid="{{@key}}" data-weapon="melee" data-type="attack" class="usage rollable">
	{{this.mode}}</div>
<div data-uuid="{{@key}}" data-weapon="melee" data-type="attack" class="level rollable">
	{{this.import}}</div>
<div data-uuid="{{@key}}" data-weapon="melee" data-type="parry" class="parry rollable">
	{{this.parry}}</div>
<div data-uuid="{{@key}}" data-weapon="melee" data-type="block" class="block rollable">
	{{this.block}}</div>
<div data-uuid="{{@key}}" data-weapon="melee" data-type="damage" class="damage rollable">
	{{this.damage}}</div>
<div class="reach">{{this.reach}}</div>
<div class="st">{{this.st}}</div>
