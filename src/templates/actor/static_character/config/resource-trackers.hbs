<div class="add">
	<a class="gcs-circled-add add" data-type="resource_trackers"></a>
	{{#if actor}}
	<a class="gcs-reset reset-all" data-type="resource_trackers"></a>
	<div>{{localize "gurps.settings.reset_all"}}</div>
	{{/if}}
</div>
<div class="item-list">
	{{#each resourceTrackers}}
		<div class="item" data-id="{{this.id}}" data-index="{{@key}}" data-type="resource_trackers">
			<div class="controls">
				<a class="gcs-grip drag" data-index="{{@index}}" data-type="resource_trackers"></a>
				<a class="gcs-trash delete" data-index="{{@index}}" data-type="resource_trackers"></a>
				<a class="gcs-circled-add add" data-id="{{@index}}" data-type="tracker_thresholds"></a>
			</div>
			<div class="fieldblock">
				<div class="label">{{localize "gurps.resource_tracker_def.name"}}</div>
				<div class="field">
					<input
						type="text"
						name="resource_trackers.{{@key}}.name"
						value="{{this.name}}"
						data-dtype="String"
					/>
				</div>
				<div class="label">{{localize "gurps.resource_tracker_def.alias"}}</div>
				<div class="field">
					<input
						type="text"
						name="resource_trackers.{{@key}}.alias"
						value="{{this.alias}}"
						data-dtype="String"
					/>
				</div>
				<div class="label">{{localize "gurps.resource_tracker_def.pdf"}}</div>
				<div class="field">
					<input
						type="text"
						name="resource_trackers.{{@key}}.pdf"
						value="{{this.pdf}}"
						data-dtype="String"
					/>
				</div>
				<div class="label">{{localize "gurps.resource_tracker_def.max"}}</div>
				<div class="field no-stretch">
					<input
						type="text"
						name="resource_trackers.{{@key}}.max"
						value="{{this.max}}"
						data-dtype="String"
					/>
					<label class="label checkbox-label">
						<input
							type="checkbox"
							name="resource_trackers.{{@key}}.isMaxEnforced"
							{{checked this.isMinEnforced}}
						/>
						{{localize "gurps.resource_tracker_def.max_enforced"}}
					</label>
				</div>
				<div class="label">{{localize "gurps.resource_tracker_def.min"}}</div>
				<div class="field no-stretch">
					<input
						type="text"
						name="resource_trackers.{{@key}}.min"
						value="{{this.min}}"
						data-dtype="String"
					/>
					<label class="label checkbox-label">
						<input
							type="checkbox"
							name="resource_trackers.{{@key}}.isMinEnforced"
							{{checked this.isMinEnforced}}
						/>
						{{localize "gurps.resource_tracker_def.min_enforced"}}
					</label>
				</div>
				{{#if this.thresholds}}
				<div class="item-list thresholds">
					{{#each this.thresholds}}
					{{>actor/character/config/threshold id=@../key parent="resource_trackers"}}
					{{/each}}
				</div>
				{{/if}}
			</div>
		</div>
	{{/each}}
</div>
