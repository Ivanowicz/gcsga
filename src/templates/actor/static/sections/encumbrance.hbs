<div id="encumbrance">
	<div class="header title">{{localize "gurps.character.encumbrance.title"}}</div>
	<div class="header level">{{localize "gurps.character.encumbrance.level"}}</div>
	<div class="header max-load">{{localize "gurps.character.encumbrance.max_load"}}</div>
	<div class="header move">{{localize "gurps.character.encumbrance.move"}}</div>
	<div class="header dodge">{{localize "gurps.character.encumbrance.dodge"}}</div>
	{{#each system.encumbrance as |v k|}}
	{{#if this.current}}
	<div class="encumbrance-marker active"><i class="gcs-weight"></i></div>
	<div class="level-number active">{{v.level}}</div>
	<div class="level active">{{localize (concat "gurps.static.encumbrance." k)}}</div>
	<div class="max-load active">{{v.weight}}</div>
	<div class="move active">{{v.move}}</div>
	<div class="dodge active">{{v.dodge}}</div>
	{{else}}
	<div class="encumbrance-marker"></div>
	<div class="level-number">{{v.level}}</div>
	<div class="level">{{localize (concat "gurps.static.encumbrance." k)}}</div>
	<div class="max-load">{{v.weight}}</div>
	<div class="move">{{v.move}}</div>
	<div class="dodge">{{v.dodge}}</div>
	{{/if}}
	{{/each}}
</div>
