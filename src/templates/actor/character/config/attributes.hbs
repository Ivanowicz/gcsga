<div class="add">
    <a class="gcs-circled-add add"></a>
</div>
<div class="item-list">
    {{#each primaryAttributes }}
		<div class="item" data-id="{{this.id}}" data-order="{{this.order}}" data-type="attribute">
            <div class="controls">
				<a class="gcs-grip drag" data-id="{{this.id}}" data-order="{{this.order}}" data-type="attribute"></a>
                <a class="gcs-trash"></a>
                <a class="gcs-circled-add disabled"></a>
            </div>
            <div class="fieldblock">
                {{>sections/input-text field="field" label="gurps.attribute_def.id" name=(concat "attributes." this.order ".id") data=this.id type="String" }}
                {{>sections/input-text field="field" label="gurps.attribute_def.name" name=(concat "attributes." this.order ".name") data=this.name type="String" }}
                {{>sections/input-text field="field" label="gurps.attribute_def.full_name" name=(concat "attributes." this.order ".full_name") data=this.full_name type="String" }}
                {{>sections/input-text field="field" label="gurps.attribute_def.attribute_base" name=(concat "attributes." this.order ".attribute_base") data=this.attribute_base type="String" }}
                {{>sections/input-text field="field" label="gurps.attribute_def.cost_per_point" name=(concat "NUMBER.attributes." this.order ".cost_per_point") data=this.cost_per_point type="String" }}
                {{>sections/input-text field="field" label="gurps.attribute_def.cost_adj_percent_per_sm" name=(concat "NUMBER.attributes." this.order ".cost_adj_percent_per_sm") data=(concat this.cost_adj_percent_per_sm "%") type="String" }}
                <div class="label">{{localize "gurps.attribute_def.type"}}</div>
                <div class="field">
                    <select name="attributes.{{this.order}}.type" data-dtype="String">
                        {{#select this.type }}
                        {{#each @root.config.select.attribute_type as |v k| }}
                            <option value="{{k}}">
                                {{ localize v }}
                            </option>
                        {{/each }}
                    {{/select }}
                </select>
            </div>
        </div>
    </div>
{{/each}}
