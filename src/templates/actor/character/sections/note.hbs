<div class="desc item{{#if (in this.type '_container')}} container{{/if}}" data-uuid="{{ this.uuid }}" {{{ indent this.parents.length }}}>
    <div class="dropdown">
        {{#if (eq this.type "note_container")}}
            {{#if this.system.open }}
                {{>actor/character/sections/dropdown-open }}
            {{ else }}
                {{>actor/character/sections/dropdown-closed }}
            {{/if }}
        {{/if }}
    </div>
	<div class="md">{{{this.formattedText}}}</div>
</div>
<div class="reference" data-pdf="{{ this.reference }}">{{ ref this.reference }}</div>
{{#if this.open }}
    {{#each (sort this.children "sort")}}
        {{>actor/character/sections/note }}
    {{/each }}
{{/if }}
