<div
	class="desc item{{#if this.isContainer}} container{{/if}} other {{disabled (not this.enabled)}}"
	data-item-id="{{ this.id }}"
	{{{indent this.parents.length}}}
>
	<div class="dropdown">
		{{#if (or this.isContainer this.children.size)}}
		{{#if this.open}}
		{{>actor/character/sections/dropdown-open}}
		{{else}}
		{{>actor/character/sections/dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		<div class="name2">{{this.formattedName}}</div>
		<div class="container-type">
{{#if (and this.isContainer (ne this.system.container_type "group"))}}{{localize (concat "gurps.select.container_type." this.system.container_type)}}{{/if}}</div>
	</div>
	{{{this.notes}}}
</div>
<div class="points {{disabled (not this.enabled)}}">{{this.adjustedPoints}}</div>
{{#if @root/inCompendium}}
<div class="tags">{{join this.tags ", "}}</div>
{{/if}}
<div class="reference" {{disabled (not this.enabled)}}>{{{ref this.reference}}}</div>
{{#if this.open}}
{{#each (sort this.children "sort")}}
{{>actor/character/sections/trait}}
{{/each}}
{{/if}}
