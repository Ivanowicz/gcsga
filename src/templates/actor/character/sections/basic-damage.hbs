<div id="basic-damage">
	<div class="header">{{localize "gurps.character.basic_damage"}}
		{{#if autoDamage}}
		<a
			class="damage-toggle fas fa-toggle-on"
			data-tooltip="{{localize 'gurps.tooltip.auto_damage'}}"
			data-tooltip-direction="DOWN"
		></a>
		{{else}}
		<a
			class="damage-toggle fas fa-toggle-off"
			data-tooltip="{{localize 'gurps.tooltip.auto_damage'}}"
			data-tooltip-direction="DOWN"
		></a>
		{{/if}}
	</div>
	<div class="fieldblock3" style="grid-template-columns: 0 0fr 1fr;">
		<div class="points" readonly stlye=""></div>
		<div
			class="field rollable"
			data-type="damage"
			data-item-id="thrust"
		>
			<input type="text" name="thrust" value="{{actor.thrust.string}}" {{disabled (not (and autoDamage ../editing))}}
			stlye="min-width: {{length actor.thrust.string}}ch;"
		/>
		</div>
		<div class="label">{{localize "gurps.character.basic_thrust"}}</div>
		<div class="points" readonly></div>
		<div
			class="field rollable"
			data-type="damage"
			data-item-id="swing"
		>
			<input type="text" name="swing" value="{{actor.swing.string}}" {{disabled (not (and autoDamage ../editing))}}
			stlye="min-width: {{length actor.swing.string}}ch;"
		/>
		</div>
		<div class="label">{{localize "gurps.character.basic_swing"}}</div>
	</div>
</div>
