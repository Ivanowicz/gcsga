{{#unless @root/inCompendium}}
<div class="quantity">{{ this.quantity }}</div>
{{/unless}}
<div
	class="desc item{{#if this.isContainer}} container{{/if}} other"
	data-item-id="{{ this.id }}"
	{{{indent this.parents.length}}}
>
	<div class="dropdown">
		{{#if (eq this.type "equipment_container") }}
		{{#if this.open }}
		{{>actor/character/sections/dropdown-open }}
		{{ else }}
		{{>actor/character/sections/dropdown-closed }}
		{{/if }}
		{{/if }}
	</div>
	<div class="name">{{ this.name }}</div>
	{{>actor/character/sections/item-notes }}
</div>
{{#if @root/inCompendium}}
<div class="uses">{{ this.maxUses }}</div>
<div class="tech-level">{{ this.techLevel }}</div>
<div class="legality-class">{{ this.legalityClass }}</div>
<div class="value">{{ this.adjustedValue }}</div>
<div class="weight">{{ this.adjustedWeightFast }}</div>
<div class="tags">{{join this.tags ", "}}</div>
{{else}}
<div class="uses">
	{{#if (and this.uses this.maxUses) }}
	{{ this.uses }}
	{{/if }}
</div>
<div class="tech-level">{{ this.techLevel }}</div>
<div class="legality-class">{{ this.legalityClass }}</div>
<div class="value">{{ this.adjustedValue }}</div>
<div class="weight">{{ this.adjustedWeightFast }}</div>
<div class="extended-value">{{ this.extendedValue }}</div>
<div class="extended-weight">{{ this.extendedWeightFast }}</div>
{{/if}}
<div class="reference">{{{ref this.reference}}}</div>
{{#if this.open }}
{{#each (sort this.children "sort") }}
{{>actor/character/sections/other-equipment }}
{{/each }}
{{/if }}
