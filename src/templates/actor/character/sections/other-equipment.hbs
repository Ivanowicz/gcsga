{{#unless @root/inCompendium}}
<div class="quantity">{{ this.system.quantity }}</div>
{{/unless}}
<div
	class="desc item{{#if this.isContainer}} container{{/if}} other {{disabled this.isGreyedOut}}"
	data-item-id="{{ this.id }}"
	{{{indent this.parents.length}}}
>
	<div class="dropdown">
		{{#if (eq this.type "equipment_container") }}
		{{#if this.open }}
		{{>actor/character/sections/dropdown-open }}
		{{ else }}
		{{>actor/character/sections/dropdown-closed }}
		{{/if }}
		{{/if }}
	</div>
	<div class="name">{{ this.name }}</div>
	{{{this.secondaryText}}}
</div>
{{#if @root/inCompendium}}
<div class="uses {{disabled this.isGreyedOut}}">{{ this.maxUses }}</div>
<div class="tech-level {{disabled this.isGreyedOut}}">{{ this.techLevel }}</div>
<div class="legality-class {{disabled this.isGreyedOut}}">{{ this.legalityClass }}</div>
<div class="value {{disabled this.isGreyedOut}}">{{ this.adjustedValue }}</div>
<div class="weight {{disabled this.isGreyedOut}}">{{ this.adjustedWeightFast }}</div>
<div class="tags {{disabled this.isGreyedOut}}">{{join this.tags ", "}}</div>
{{else}}
<div class="uses">
	{{#if (and this.uses this.maxUses) }}
	{{ this.uses }}
	{{/if }}
</div>
<div class="tech-level {{disabled this.isGreyedOut}}">{{ this.techLevel }}</div>
<div class="legality-class {{disabled this.isGreyedOut}}">{{ this.legalityClass }}</div>
<div class="value {{disabled this.isGreyedOut}}">{{ this.adjustedValue }}</div>
<div class="weight {{disabled this.isGreyedOut}}">{{ this.adjustedWeightFast }}</div>
<div class="extended-value {{disabled this.isGreyedOut}}">{{ this.extendedValue }}</div>
<div class="extended-weight {{disabled this.isGreyedOut}}">{{ this.extendedWeightFast }}</div>
{{/if}}
<div class="reference {{disabled this.isGreyedOut}}">{{{ref this.reference}}}</div>
{{#if this.open }}
{{#each (sort this.children "sort") }}
{{>actor/character/sections/other-equipment }}
{{/each }}
{{/if }}
