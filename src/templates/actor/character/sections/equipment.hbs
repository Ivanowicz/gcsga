<div class="equipped" data-item-id="{{this._id}}">{{#if this.equipped}}<i class="gcs-checkmark"></i>{{/if}}
</div>
<div class="quantity">{{this.system.quantity}}</div>
<div class="desc item{{#if (isContainer this)}} container{{/if}} other {{disabled (not this.enabled)}}"
	data-item-id="{{ this._id }}" data-tooltip-direction="DOWN" data-tooltip="{{this.resolvedTooltip}}" {{{indent
	this.parents.length}}}>
	<div class="dropdown">
		{{#if (isContainer this)}}
		{{#if this.system.open}}
		{{>actor/character/sections/dropdown-open}}
		{{else}}
		{{>actor/character/sections/dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.formattedName}}
	</div>
	{{{this.resolvedNotes}}}
</div>
<div class="uses {{disabled (not this.enabled)}}">{{#if (and this.system.uses
	this.system.max_uses)}}{{this.system.uses}}{{/if}}</div>
<div class="tech-level {{disabled (not this.enabled)}}">{{this.system.tech_level}}</div>
<div class="legality-class {{disabled (not this.enabled)}}">{{this.system.legality_class}}</div>
<div class="value {{disabled (not this.enabled)}}">{{this.adjustedValue}}</div>
<div class="weight {{disabled (not this.enabled)}}">{{this.adjustedWeightFat}}</div>
<div class="extended-value {{disabled (not this.enabled)}}">{{this.extendedValue}}</div>
<div class="extended-weight {{disabled (not this.enabled)}}">{{this.extendedWeightFast}}</div>
<div class="reference {{disabled (not this.enabled)}}">{{{ref this.system.reference}}}</div>
{{#if this.system.open}}
{{#each (sort this.children "sort")}}
{{>actor/character/sections/equipment}}
{{/each}}
{{/if}}
