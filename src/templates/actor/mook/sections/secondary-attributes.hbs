<div id="secondary-attributes">
	<div class="header">{{localize "gurps.character.secondary_attributes"}}</div>
	<div class="fieldblock">
		{{#each secondary_attributes}}
		{{#if (eq this.attribute_def.type "secondary_separator")}}
		<div class="separator_parent">
			<div class="separator" data-text="{{this.attribute_def.name}}">{{this.attribute_def.name}}</div>
		</div>
		{{else if (or (eq this.attribute_def.type "integer_ref") (eq this.attribte_def.type "decimal_ref"))}}
		<div data-id="{{this.attr_id}}" data-type="attribute" class="field rollable {{effective this}}">
			{{this.effective}}
		</div>
		<div class="label">{{this.attribute_def.name}}</div>
		{{else}}
		<div data-id="{{this.attr_id}}" data-type="attribute" class="field rollable {{effective this}}">
			{{this.effective}}
		</div>
		<div class="label">{{this.attribute_def.name}}</div>
		{{/if}}
		{{/each}}
	</div>
</div>
