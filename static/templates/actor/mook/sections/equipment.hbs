<div class="equipped" data-item-id="{{this.id}}">{{#if this.equipped}}<i class="gcs-checkmark"></i>{{/if}}</div>
<div class="quantity">{{this.system.quantity}}</div>
<div
	class="desc item{{#if this.isContainer}} container{{/if}} other {{disabled this.isGreyedOut}}"
	data-item-id="{{ this.id }}"
	{{{indent this.parents.length}}}
>
	<div class="dropdown">
		{{#if (eq this.type "equipment_container")}}
		{{#if this.open}}
		{{>actor/character/sections/dropdown-open}}
		{{else}}
		{{>actor/character/sections/dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.name}}
	</div>
	{{{this.secondaryText}}}
</div>
<div class="uses {{disabled this.isGreyedOut}}">{{#if (and this.system.uses this.system.max_ses)}}{{this.system.uses}}{{/if}}</div>
<div class="tech-level {{disabled this.isGreyedOut}}">{{this.system.tech_level}}</div>
<div class="legality-class {{disabled this.isGreyedOut}}">{{this.system_legality_class}}</div>
<div class="value {{disabled this.isGreyedOut}}">{{this.adjustedValue}}</div>
<div class="weight {{disabled this.isGreyedOut}}">{{this.adjustedWeight}}</div>
<div class="extended-value {{disabled this.isGreyedOut}}">{{this.extendedValue}}</div>
<div class="extended-weight {{disabled this.isGreyedOut}}">{{this.extendedWeightFast}}</div>
{{#if this.open}}
{{#each (sort this.children "sort")}}
{{>actor/character/sections/equipment}}
{{/each}}
{{/if}}
