<div class="add">
	<a class="gcs-circled-add" data-action="add-move-type"></a>
	{{#if actor}}
	<a class="gcs-reset" data-action="reset-all" data-type="move-types"></a>
	<div>{{localize "gurps.settings.reset_all"}}</div>
	{{/if}}
</div>
<div class="item-list">
	{{#each attributes.moveTypes}}
	<div class="item" data-id="{{this.id}}" data-index="{{@index}}" data-type="move_types">
		<div class="controls">
			<a class="gcs-grip drag" data-index="{{@index}}" data-type="move_types"></a>
			<a class="gcs-trash" data-index="{{@index}}" data-actoin="remove-move-type"></a>
			<a class="gcs-circled-add" data-id="{{@index}}" data-action="add-move-type-override"></a>
		</div>
		<div class="fieldblock">
			<div class="label">{{localize "gurps.move_type_def.id"}}</div>
			<div class="field">
				<input
					type="text"
					name="array.system.settings.move_types.{{@index}}.id"
					value="{{this.id}}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{localize "gurps.move_type_def.name"}}</div>
			<div class="field">
				<input
					type="text"
					name="array.system.settings.move_types.{{@index}}.name"
					value="{{this.name}}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{localize "gurps.move_type_def.base"}}</div>
			<div class="field">
				<input
					type="text"
					name="array.system.settings.move_types.{{@index}}.base"
					value="{{this.base}}"
					data-dtype="String"
				/>
			</div>
			<div class="item-list overrides">
				{{#each this.overrides}} {{>actor/character/config/override id=@../index
				parent="array.system.settings.move_types"}} {{/each}}
			</div>
		</div>
	</div>
	{{/each}}
</div>
