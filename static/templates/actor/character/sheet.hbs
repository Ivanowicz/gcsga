<form class="{{cssClass}}" autocomplete="off">
	<div id="personal">
		{{>actor/character/sections/portrait }} {{>actor/character/sections/identity }}
		{{>actor/character/sections/miscellaneous }} {{>actor/character/sections/description }}
		{{>actor/character/sections/points pb=actor.pointsBreakdown}}
	</div>
	<div id="stats">
		<div id="attributes">
			{{>actor/character/sections/primary-attributes }} {{>actor/character/sections/basic-damage }}
			{{>actor/character/sections/secondary-attributes }} {{>actor/character/sections/pool-attributes }}
		</div>
		<div id="hit-locations">
			<div class="header body-plan">{{ actor.hitLocationTable.name }}</div>
			<div class="header roll rollable" data-type="location" data-actor-id="{{this.id}}">
				{{ localize "gurps.character.body_type.roll" }}
			</div>
			<div class="header location">{{ localize "gurps.character.body_type.location" }}</div>
			<div class="header dr">{{ localize "gurps.character.body_type.dr" }}</div>
			{{#each actor.hitLocationTable.locations }} {{>actor/character/sections/hit-location}} {{/each }}
		</div>
		<div id="encumbrance-lifting">
			{{>actor/character/sections/encumbrance }}
			<div id="lifting-macros">
				<nav class="header tabs-navigation" data-group="lifting">
					<a class="item" data-tab="lifting">{{ localize "gurps.character.lifting.title" }}</a>
					<a class="item" data-tab="macros">{{ localize "gurps.character.macros.title" }}</a>
				</nav>
				<section class="tabs-content">
					{{>actor/character/sections/lifting }} {{>actor/character/sections/macros }}
				</section>
			</div>
		</div>
		<div id="resource-trackers">{{>actor/character/sections/resource-trackers }}</div>
		<div id="move">{{>actor/character/sections/move }}</div>
	</div>
	{{>actor/character/sections/embeds}}
	<div id="footer">
		<div class="left">{{{ localize "gurps.character.copyright" current_year=current_year }}}</div>
		<div class="right">
			<a tabindex="-1" href="https://gurpscharactersheet.com/">gurpscharactersheet.com</a>
		</div>
	</div>
</form>
