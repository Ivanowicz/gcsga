<div
	class="desc item{{#if (isContainer this)}} container{{/if}}"
	data-item-id="{{ this._id }}"
	data-tooltip-direction="DOWN"
	data-tooltip="{{ this.resolvedTooltip }}"
	{{{indent
	this.parents.length}}}
>
	{{{ dropdown item }}}
	<div class="name">{{ this.formattedName }}</div>
	{{{ this.resolvedNotes }}}
</div>
{{#if (isContainer this)}}
<div class="level"></div>
<div class="rsl"></div>
{{ else }}
<div
	data-item-id="{{ this._id }}"
	data-type="spell"
	class="level rollable {{ effective this }}"
	data-html="true"
	data-tooltip-direction="DOWN"
	data-tooltip="{{ this.levelTooltip }}"
>
	{{ this.skillLevel }}
</div>
<div
	data-item-id="{{ this._id }}"
	data-type="spell_rsl"
	class="rsl rollable {{ effective this }}"
	data-tooltip-direction="DOWN"
	data-tooltip="{{ this.levelTooltip }}"
>
	{{ this.relativeLevel }}
</div>
{{/if}}
<div class="points" data-tooltip="{{ this.pointsTooltip }}" data-tooltip-direction="DOWN">
	{{ this.adjustedPoints }}
</div>
<div class="reference">{{{ ref this.system.reference }}}</div>
{{#if this.system.open}} {{#each this.children}} {{>actor/character/sections/spell}} {{/each}} {{/if}}
