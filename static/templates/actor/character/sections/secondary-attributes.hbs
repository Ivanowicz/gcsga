<div id="secondary-attributes">
	<div class="header">{{localize "gurps.character.secondary_attributes"}}</div>
	<div class="fieldblock3">
		{{#each attributes.secondaryAttributes}}
		{{#if (eq this.definition.type "secondary_separator")}}
		<div class="separator_parent">
			<div class="separator" data-text="{{this.definition.name}}">{{this.definition.name}}</div>
		</div>
		{{else if (or (eq this.definition.type "integer_ref") (eq this.attribte_def.type "decimal_ref"))}}
		<div class="points"> </div>
		<div data-id="{{this.attr_id}}" data-type="attribute" class="field rollable {{effective this}}">
			<input class="number" type="text" value="{{this.effective}}" disabled style="min-width: {{length this.effective}}ch;"/>
		</div>
		<div class="label">{{this.definition.combinedName}}</div>
		{{else}}
		<div class="points">[{{this.points}}]</div>
		<div data-id="{{this.attr_id}}" data-type="attribute" class="field rollable {{effective this}}">
			<input name="attributes.{{this.id}}.adj" class="input number" type="text" data-dtype="Number"
				value="{{this.effective}}" {{disabled (not ../editing)}}  style="min-width: {{length this.effective}}ch;"/>
		</div>
		<div class="label">{{this.definition.combinedName}}</div>
		{{/if}}
		{{/each}}
	</div>
</div>
