<li {{#if isContainer}}data-is-container{{/if}} {{#if inContainer}}data-container-id="{{ item.flags.gcsga.container }}"{{/if}} data-item-id="{{ item.id }}">
    <div class="data">
        <div
            class="desc item"
            data-disabled="{{ not item.enabled }}"
            data-tooltip-direction="DOWN"
            data-tooltip="{{ item.resolvedTooltip }}"
            data-item-id="{{ item._id }}"
            {{{indent
            item.parents.length}}}
            >
            <div class="dropdown">
                {{#if (or isContainer item.children.size)}}
                    {{#if item.system.open}}
                        {{>actor/character/sections/dropdown-open}}
                    {{ else }}
                        {{>actor/character/sections/dropdown-closed}}
                    {{/if}}
                {{/if}}
            </div>
            <span class="name">
                {{ item.formattedName }}
                <span class="container-type">
                    {{#if (and isContainer (ne item.system.container_type "group"))}}
                        {{ localize (concat "gurps.character.traits.container_type." item.system.container_type) }}
                    {{/if}}
                </span>
            </span>
            {{{ item.resolvedNotes }}}
        </div>
        <span class="points">{{ item.adjustedPoints }}</span>
        <div class="reference">{{{ ref item.system.reference }}}</div>
    </div>
    <div class="item-summary" hidden="hidden"></div>
</li>
{{#if item.system.open}}
    {{#each children}}
        {{>actor/character/sections/trait inContainer=true}}
    {{/each}}
{{/if}}
