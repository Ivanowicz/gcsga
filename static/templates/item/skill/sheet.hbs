<form class="{{ cssClass }}" autocomplete="off">
	<div id="sheet">
		<div id="details">
			<div class="label">{{ localize "gurps.item.img" }}</div>
			<div class="field">
				<div class="img-display" style="background-image: url({{ document.img }})">
					<img src="{{ document.img }}" data-edit="img" title="{{ document.name }}" />
				</div>
			</div>
			<div class="label">{{ localize "gurps.item.name" }}</div>
			<div class="field">
				<input type="text" name="name" value="{{ item.name }}" data-dtype="String" />
			</div>
			<div class="label">{{ localize "gurps.item.specialization" }}</div>
			<div class="field">
				<input
					type="text"
					name="system.specialization"
					value="{{ system.specialization }}"
					data-dtype="String"
				/>
			</div>
			<div class="label">{{ localize "gurps.item.tech_level" }}</div>
			<div class="field no-stretch">
				{{#if system.tech_level_required}}
				<input type="text" name="system.tech_level" value="{{ system.tech_level }}" data-dtype="String" />
				{{ else }}
				<input
					type="text"
					name="system.tech_level"
					value="{{ system.tech_level }}"
					data-dtype="String"
					disabled
				/>
				{{/if}}
				<label class="label checkbox-label">
					<input
						type="checkbox"
						name="system.tech_level_required"
						data-dtype="Boolean"
						{{
						checked
						system.tech_level_required
						}}
					/>
					{{ localize "gurps.item.tech_level_required" }}
				</label>
			</div>
			<div class="label">{{ localize "gurps.item.notes" }}</div>
			<div class="field">
				<textarea type="text" name="system.notes" data-dtype="String">{{textareaFormat system.notes}}</textarea>
			</div>
			<div class="label">{{ localize "gurps.item.vtt_notes" }}</div>
			<div class="field">
				<textarea type="text" name="system.vtt_notes" data-dtype="String">
{{textareaFormat
						system.vtt_notes
}}</textarea
				>
			</div>
			<div class="label">{{ localize "gurps.item.tags" }}</div>
			<div class="field">
				<input type="text" name="system.tags" value="{{ join system.tags ', ' }}" data-dtype="String" />
			</div>
			<div class="label">{{ localize "gurps.item.difficulty" }}</div>
			<div class="field no-stretch">
				<select name="attribute" data-dtype="String">
					{{#select document.attribute}} {{#each attributes as |v k|}}
					<option value="{{ k }}">{{ localize v }}</option>
					{{/each}} {{/select}}
				</select>
				<div class="label">{{ localize "gurps.item.slash" }}</div>
				<select name="difficulty" data-dtype="String">
					{{#select document.difficulty}} {{#each config.select.difficulty as |v k|}}
					<option value="{{ k }}">{{ localize v }}</option>
					{{/each}} {{/select}}
				</select>
			</div>
			<div class="label">{{ localize "gurps.item.epm_before" }}</div>
			<div class="field no-stretch">
				<input
					type="text"
					name="system.encumbrance_penalty_multiplier"
					value="{{ system.encumbrance_penalty_multiplier }}"
					data-dtype="Number"
				/>
				<div class="label">{{ localize "gurps.item.epm_after" }}</div>
			</div>
			{{#if document.actor}}
			<div class="label">{{ localize "gurps.item.points" }}</div>
			<div class="field no-stretch">
				<input type="text" name="system.points" value="{{ system.points }}" data-dtype="Number" />
				<input
					type="text"
					value="{{ document.skillLevel }}/{{ document.relativeLevel }}"
					readonly
					tabindex="-1"
				/>
			</div>
			{{/if}}
			<div class="label">{{ localize "gurps.item.reference" }}</div>
			<div class="field">
				<input type="text" name="system.reference" value="{{ system.reference }}" data-dtype="String" />
			</div>
			<div class="label">{{ localize "gurps.item.reference_highlight" }}</div>
			<div class="field">
				<input
					type="text"
					name="system.reference_highlight"
					value="{{ system.reference_highlight }}"
					data-dtype="String"
				/>
			</div>
		</div>
		{{>item/sections/prerequisites}} {{>item/sections/defaults attributes=attributes sysPrefix=sysPrefix}}
		{{>item/sections/features}} {{>item/sections/melee}} {{>item/sections/ranged}} {{>item/sections/study}}
	</div>
</form>
