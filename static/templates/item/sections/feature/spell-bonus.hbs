<div class="field-3">
	<div class="placeholder"> </div>
	<select name="array.system.features.{{@index}}.match">
		{{#select this.match}}
			{{#each config.select.spellmatch as |v k|}}
				<option value="{{k}}">{{localize v}}</option>
			{{/each}}
		{{/select}}
	</select>
	<select name="array.system.features.{{@index}}.name.compare" {{disabled (eq this.match "all_colleges")}}>
		{{#select this.name.compare}}
			{{#each config.select.string_criteria as |v k|}}
				<option value="{{k}}">{{localize v}}</option>
			{{/each}}
		{{/select}}
	</select>
	<div class="field">
		<input
			type="text"
			name="array.system.features.{{@index}}.name.qualifier"
			value="{{this.name.qualifier}}"
			data-dtype="String"
			{{disabled (or (eq this.match "all_colleges") (eq this.name.compare "none"))}}
		/>
	</div>
</div>
<div class="field-2">
	<div class="placeholder"> </div>
	<select name="array.system.features.{{@index}}.tags.compare">
		{{#select this.tags.compare}}
			{{#each config.select.string_criteria as |v k|}}
				<option value="{{k}}">{{localize "gurps.field_prefix.tags"}} {{localize v}}</option>
			{{/each}}
		{{/select}}
	</select>
	<div class="field">
		<input
			type="text"
			name="array.system.features.{{@index}}.tags.qualifier"
			value="{{this.tags.qualifier}}"
			data-dtype="String"
			{{disabled (eq this.tags.compare "none")}}
		/>
	</div>
</div>
