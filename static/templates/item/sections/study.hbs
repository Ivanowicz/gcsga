<div id="study">
	<div class="header">{{localize "gurps.study.header"}}</div>
	<div class="content">
		<div class="control">
<a class="add button gcs-circled-add"></a>
			<div>
				{{localize "gurps.study.studied_alt" hours=document.studyHours total=document.studyHoursNeeded}}
			<select name="system.study_hours_needed">
				{{#select system.study_hours_needed}}
					{{#each config.select.study_level as |v k|}}
						<option value="{{k}}">
							{{localize v}}
						</option>
					{{/each}}
				{{/select}}
					</select>{{localize "gurps.study.for"}}
			</div>
		</div>
		{{#each system.study}}
			<div class="study-entry">
				<a class="remove button gcs-trash" data-index="{{@index}}"></a>
				<select class="type" name="array.system.study.{{@index}}.type" data-index="{{@index}}">
				{{#select this.type}}
					{{#each ../config.select.study as |v k| }}
						<option value="{{k}}">
							{{localize v}}
						</option>
					{{/each}}
				{{/select}}
				</select>
				<i class="gcs-info" tooltip-direction="DOWN" data-tooltip="{{{studyInfo this.type}}}"></i>
				<input type="text" name="array.system.study.{{@index}}.hours" value="{{this.hours}}" data-dtype="Number" />
				<input type="text" value="{{adjustedStudyHours this}}" readonly tabIndex="-1" />
				<input type="text" name="array.system.study.{{@index}}.note" value="{{this.notes}}" data-dtype="String" placeholder="{{localize 'gurps.item.note'}}"/>
			</div>
		{{/each}}
	</div>
</div>
