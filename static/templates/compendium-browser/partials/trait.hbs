<div
	class="desc item{{#if (isContainer entry)}} container{{/if}} other {{disabled (not entry.enabled)}}"
	data-tooltip-direction="DOWN"
	data-tooltip="{{entry.resolvedTooltip}}"
	data-entry-uuid="{{entry.uuid}}"
	{{{indent
	entry.parents.length}}}
>
	<div class="dropdown">
		{{#if (or (isContainer entry) entry.children.size)}} {{#if entry.system.open}}
		{{>actor/character/partials/dropdown-open}} {{else}} {{>actor/character/partials/dropdown-closed}} {{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{entry.formattedName}}
		<div class="container-type">
			{{#if (and (isContainer entry) (ne entry.system.container_type "group"))}}{{localize (concat
			"gurps.character.traits.container_type." entry.system.container_type)}}{{/if}}
		</div>
	</div>
	{{{entry.resolvedNotes}}}
</div>
<div class="points {{disabled (not entry.enabled)}}">{{entry.points}}</div>
<div class="tags">{{join entry.tags ", "}}</div>
<div class="reference" {{disabled (not entry.enabled)}}>{{{ref entry.reference}}}</div>
{{#if entry.system.open}} {{#each (sort entry.children "sort")}} {{>actor/character/partials/trait}} {{/each}} {{/if}}
